<?xml version='1.0' encoding='utf-8'?>
<widget id="ch.nicolapps.tpgwidget" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>TPGwidget</name>
    <description>
        Créez des raccourcis pour vos arrêts TPG favoris.
    </description>
    <author email="tpgwidget@nicolapps.ch" href="https://www.nicolapps.ch/tpgwidget">
        Nicolas Ettlin
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="*" />
    <platform name="android">
        <icon density="mdpi" src="res/icon/mdpi.png" />
        <icon density="hdpi" src="res/icon/hdpi.png" />
        <icon density="xhdpi" src="res/icon/xhdpi.png" />
        <preference name="android-minSdkVersion" value="20" />
    </platform>
    <preference name="orientation" value="portrait" />
</widget>
